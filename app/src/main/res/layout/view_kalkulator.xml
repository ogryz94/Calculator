<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.olga.kalkulator.KalkulatorActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:gravity="end"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="349dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="361dp"
        android:layout_height="316dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn0"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="0" />


        <Button
            android:id="@+id/btnprzecinek"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btn0"
            android:layout_toRightOf="@+id/btn0"
            android:text="." />

        <Button
            android:id="@+id/btnplus"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btnwynik"
            android:layout_toStartOf="@+id/btnwynik"
            android:text="+" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn0"
            android:layout_toEndOf="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btnprzecinek"
            android:layout_toLeftOf="@+id/btnminus"
            android:layout_toStartOf="@+id/btnminus"
            android:text="3" />

        <Button
            android:id="@+id/btnminus"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/btnplus"
            android:layout_alignStart="@+id/btnplus"
            android:layout_below="@+id/btn6"
            android:text="−" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn2"
            android:layout_toLeftOf="@+id/btn3"
            android:layout_toStartOf="@+id/btn3"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/btn5"
            android:layout_toEndOf="@+id/btn5"
            android:layout_toRightOf="@+id/btn5"
            android:text="6" />

        <Button
            android:id="@+id/btnrazy"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@+id/btnznak"
            android:layout_toEndOf="@+id/btn6"
            android:layout_toRightOf="@+id/btn6"
            android:text="*" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn5"
            android:layout_alignLeft="@+id/btn5"
            android:layout_alignStart="@+id/btn5"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/btn8"
            android:layout_alignTop="@+id/btn8"
            android:layout_toEndOf="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:text="9" />

        <Button
            android:id="@+id/btnpodziel"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/btnrazy"
            android:layout_alignStart="@+id/btnrazy"
            android:layout_below="@+id/btnrazy"
            android:text="/" />




        <Button
            android:id="@+id/btnce"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn8"
            android:layout_alignLeft="@+id/btn8"
            android:layout_alignStart="@+id/btn8"
            android:text="CE" />

        <Button
            android:id="@+id/btnc"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/btnce"
            android:layout_alignTop="@+id/btnce"
            android:layout_toEndOf="@+id/btnce"
            android:layout_toRightOf="@+id/btnce"
            android:text="C" />

        <Button
            android:id="@+id/btnznak"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn7"
            android:layout_toEndOf="@+id/btnc"
            android:layout_toRightOf="@+id/btnc"
            android:text="+/−" />

        <Button
            android:id="@+id/btnsinhx"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnznak"
            android:text="sinhx"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />

        <Button
            android:id="@+id/btnwynik"
            android:layout_width="80dp"
            android:layout_height="113dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnpodziel"
            android:text="="
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.82" />

        <ImageButton
            android:id="@+id/btnmoje2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:elevation="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnsinhx"
            app:srcCompat="@drawable/newton" />

        <ImageButton
            android:id="@+id/btnpopraw"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/btn7"
            android:elevation="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/arrow"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="221dp" />


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
